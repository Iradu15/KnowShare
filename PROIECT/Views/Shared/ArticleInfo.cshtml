<div class="card-body" style="background-color:mintcream; border:solid; border-color:darkcyan; border-width:2px;">

    <h3 class="index-article-title" style="text-decoration:none;color:darkcyan; text-align:center" class="card-title alert-success py-3 px-3 rounded-2">@Model.Title</h3>
    <br />
    <div class="index-article-title" style="text-decoration:none;color:darkcyan;font-size:18px;" class="card-text">@Html.Raw(Model.Content)</div>

    <div class="d-flex justify-content-between flex-row mt-5" style="font-family: 'Satisfy', cursive; font-size:14px; color:darkcyan;">

        <div><i class="bi bi-globe"></i> @Model.Domain.DomainName</div>

        <div><i class="bi bi-person-circle"></i>@Model.User.UserName</div>

        <span class="alert-success">@Model.Date</span>

    </div>

</div>


