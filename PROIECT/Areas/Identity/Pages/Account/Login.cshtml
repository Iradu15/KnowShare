@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="index-article-title">Acceseaza contul tau</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <p class="small-text">Introdu datele tale mai jos:</p>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label class="small-text" style="font-size:14px;" asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <br /> 
                </div>
                <div>
                    <button style="font-family: Satisfy, cursive;" id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Logheaza-te</button>
                </div>

                <br />
                <div class="small-text">
                    <p>
                        <a style="color:white;" id="forgot-password" asp-page="./ForgotPassword">Ti-ai uitat parola?</a>
                    </p>
                    <p>
                        <a style="color:white;" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Creeaza un cont nou</a>
                    </p>
                    <p>
                        <a  style="color:white;" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reconfirma email-ul</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        
            <br />
            <img src="https://origin-www.bublup.com/wp-content/uploads/2021/01/onlinecourse3.jpg"
                 style="width:500px; height:350px; margin-left: 175px">
            <br />
       
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
